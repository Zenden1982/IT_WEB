@model List<Client>
@{

}
<h2 class="text-center mb-5">Список клиентов</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="ClientsContoller" asp-action="Create">Добавить клиента</a>
    </div>
    <div class="col">
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Полное имя</th>
            <th>Номер телефона</th>
            <th>Действия</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Number</td>
                 <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="ClientsContoller" asp-action="Edit" asp-route-id="@product.Id">Редактировать</a>
                    <a class="btn btn-danger btn-sm" asp-controller="ClientsContoller" asp-action="Delete" asp-route-id="@product.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>

</table>
