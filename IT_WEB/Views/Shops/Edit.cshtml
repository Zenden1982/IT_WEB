@model ShopDto
@{
}

<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3">
		<h2 class="text-center mb-5">Редактирование данные о магазине</h2>

		<form method = "post" enctype = "multipart/form-data">	
			
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Id</label>
				<div class="col-sm-8">
					<input class="form-control-plaintext" readonly value ="@ViewData["ShopId"]">
				</div>
			</div>
			
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Название</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Name">
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Описание</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Description">
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Адрес</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="address">
					<span asp-validation-for="address" class="text-danger"></span>
				</div>
			</div>

			<div class="row">
				<div class="offset-sm-4 col-sm-4 d-grid">
					<button type="submit" class="btn btn-primary">Сохранить изменения</button>
				</div>
				<div class="col-sm-4 d-grid">
					<a class="btn btn-outline-primary" asp-controller="Shops" asp-action="IndexShop" role="button">
						Отмена
					</a>
				</div>
			</div>
		</form>


	</div>
</div>